<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>Quests</title>
    <link rel="icon" href="/static/images/questIcon.png" type="image/icon type">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/static/css/studentQuests.css"/>
    <link rel="stylesheet" href="/static/css/studentCommon.css"/>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="/static/js/studentCommon.js"></script>
</head>
<body>

<div class="position-fixed" id="menu">
  <p id="closeMenuButton" onclick="closeMenu()">&#10008;</p>
    <a href="/student">Main page</a>
  <a href="/student/store">Store</a>
  <a href="/student/quests">Quests</a>
  <a href="/student/inventory">Inventory</a>
  <a href="/student/transactions">Transactions</a>
  <a href="/logout">Logout</a>
</div>

<div class="container-fluid" id="topSection">
    <div class="row h-100">
        <div class="d-flex flex-row align-items-center justify-content-start w-10 flex-grow-1" id="openMenu">
            <img src="/static/images/menu.png" onclick="openMenu()" id="openMenuImage">
        </div>
        <div class="d-flex flex-row align-items-center justify-content-end w-90" id="header">
            <div id="form">
                <form method="POST" action="/logout">
                    <input type="image" id="logoutButtonImage" src="/static/images/logoutButton.png" border="0"
                    alt="Submit"/>
                </form>
            </div>
            <div id="signOut">
                <p>Sign Out</p>
            </div>
        </div>
    </div>
</div>

<div id="middleSection">
    <div class="container">
        <div class="row align-items-center">
            {% for quest in quests %}
                {% if (quest.getIsCompleted() == true) %}
                    <div class="col-lg-4 mx-auto">
                        <div class="text-center questCard" id="{{ quest.getId() }}">
                            <p class="h-10 p-2 questCategory">{{ quest.getCategory() }}</p>
                            <p class="h-25 questDescription">{{ quest.getDescription() }}</p>
                            <p class="h-10 p-4 questName">{{ quest.getName() }}</p>
                            <p class="h-25  questReward">
                                {{ quest.getTimesCompleted() }}x{{ quest.getReward() }}
                                 <img src="/static/images/coinIcon.png"
                            </p>
                        </div>
                    </div>
                {% else %}
                    <div class="col-lg-4 mx-auto">
                        <div class="text-center questCard" id="{{ quest.getId() }}" style="opacity: 0.3;">
                            <p class="h-10 p-2 questCategory">{{ quest.getCategory() }}</p>
                            <p class="h-25 questDescription">{{ quest.getDescription() }}</p>
                            <p class="h-10 p-4 questName">{{ quest.getName() }}</p>
                            <p class="h-25  questReward">{{ quest.getReward() }} <img src="/static/images/coinIcon.png"</p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>

</body>
</html>w